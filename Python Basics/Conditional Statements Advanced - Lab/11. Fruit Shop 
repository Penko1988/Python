        price = 1.20
        total_sum = quantity * price
        print(f"{total_sum:.2f}")
    elif day_of_the_week == "Saturday" or day_of_the_week == "Sunday":
        price = 1.25
        total_sum = quantity * price
        print(f"{total_sum:.2f}")
