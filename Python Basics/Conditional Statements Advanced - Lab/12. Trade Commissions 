city = input()
sales = float(input())

commissions = 0

if city == "Sofia":
    if 0 <= sales <= 500:
        commissions = 0.05
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 500 < sales <= 1000:
        commissions = 0.07
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 1000 < sales <= 10000:
        commissions = 0.08
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif sales > 10000:
        commissions = 0.12
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    else:
        print("error")

elif city == "Varna":
    if 0 <= sales <= 500:
        commissions = 0.045
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 500 < sales <= 1000:
        commissions = 0.075
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 1000 < sales <= 10000:
        commissions = 0.10
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif sales > 10000:
        commissions = 0.13
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    else:
        print("error")

elif city == "Plovdiv":
    if 0 <= sales <= 500:
        commissions = 0.055
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 500 < sales <= 1000:
        commissions = 0.08
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif 1000 < sales <= 10000:
        commissions = 0.12
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    elif sales > 10000:
        commissions = 0.145
        total_commissions = sales * commissions
        print(f"{total_commissions:.2f}")
    else:
        print("error")

else:
    print("error")